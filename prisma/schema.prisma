generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  passwdHash String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Session    Session?
}

model Session {
  id          Int    @id @default(autoincrement())
  sessionUuid String @unique
  sessionUser User   @relation(fields: [userId], references: [id])
  userId      Int    @unique
}
